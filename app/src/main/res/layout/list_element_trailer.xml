<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_element_trailer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/list_element_trailer_progbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trailer_element_progbar_margin_top"
        app:layout_constraintBottom_toBottomOf="@+id/list_element_trailer_container"
        app:layout_constraintEnd_toEndOf="@+id/list_element_trailer_imageview"
        app:layout_constraintStart_toStartOf="@+id/list_element_trailer_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_element_trailer_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/list_element_trailer_imageview"
        app:layout_constraintEnd_toEndOf="@+id/list_element_trailer_imageview"
        app:layout_constraintStart_toStartOf="@+id/list_element_trailer_imageview"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_broken_image_accent_24dp" />

    <ImageView
        android:id="@+id/list_element_trailer_imageview"
        android:layout_width="0dp"
        android:layout_height="@dimen/trailer_element_imageview_height"
        android:layout_marginEnd="@dimen/trailer_element_imageview_margin"
        android:layout_marginStart="@dimen/trailer_element_imageview_margin"
        android:layout_marginTop="@dimen/trailer_element_imageview_margin"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_element_trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/trailer_element_title_margin"
        android:layout_marginEnd="@dimen/trailer_element_title_margin"
        android:layout_marginStart="@dimen/trailer_element_title_margin"
        android:layout_marginTop="@dimen/trailer_element_title_margin"
        android:visibility="visible"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_element_trailer_imageview"
        tools:text="titolo trailer" />

    <ImageView
        android:id="@+id/list_element_trailer_play_imageview"
        android:layout_width="@dimen/trailer_element_play_icon_size"
        android:layout_height="@dimen/trailer_element_play_icon_size"
        android:layout_marginBottom="@dimen/trailer_element_play_icon_margin"
        android:layout_marginEnd="@dimen/trailer_element_play_icon_margin"
        android:layout_marginStart="@dimen/trailer_element_play_icon_margin"
        android:layout_marginTop="@dimen/trailer_element_play_icon_margin"
        app:layout_constraintBottom_toBottomOf="@+id/list_element_trailer_imageview"
        app:layout_constraintEnd_toEndOf="@+id/list_element_trailer_imageview"
        app:layout_constraintStart_toStartOf="@+id/list_element_trailer_imageview"
        app:layout_constraintTop_toTopOf="@+id/list_element_trailer_imageview"
        app:srcCompat="@drawable/ic_play_circle_outline_white_24dp" />

</android.support.constraint.ConstraintLayout>