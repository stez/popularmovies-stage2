<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_element_poster_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/list_element_poster_progbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/list_element_poster_imageview"
        app:layout_constraintEnd_toEndOf="@+id/list_element_poster_imageview"
        app:layout_constraintStart_toStartOf="@+id/list_element_poster_imageview"
        app:layout_constraintTop_toTopOf="@+id/list_element_poster_imageview" />

    <ImageView
        android:id="@+id/list_element_poster_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/list_element_poster_imageview"
        app:layout_constraintEnd_toEndOf="@+id/list_element_poster_imageview"
        app:layout_constraintStart_toStartOf="@+id/list_element_poster_imageview"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_broken_image_accent_24dp" />

    <ImageView
        android:id="@+id/list_element_poster_imageview"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_element_poster_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_element_poster_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/poster_title_margin"
        android:layout_marginStart="@dimen/poster_title_margin"
        android:layout_marginTop="@dimen/poster_title_margin"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_element_poster_error"
        tools:text="Titolo" />

</android.support.constraint.ConstraintLayout>